<!doctype html>
<html class="no-js" lang="{{ page.seoLang }}">

<head>
	<meta charset="utf-8" />
	<title>{{ page.title }}</title>
	<meta name="keywords" content="{{ page.keywords }}" />
	<meta name="description" content="{{ page.description }}" />

	{% if site.favicon %}
		<link rel="icon" href="{{ site.favicon['favicon'] }}" type="image/x-icon" />
		<link rel="SHORTCUT ICON" href="{{ site.favicon['thumbnail'] }}?v={{ "now"|date("U") }}" type="image/x-icon" />
	{% endif %}
	<meta name="viewport" content="width=device-width,initial-scale=1">

	{% include basekit.headScript %}
</head>

<body {{ isV10sSite ? 'id="migrated-site"' : '' }} class="{{ page.backgroundClass }}">

	{% block content %}
	{% endblock %}

    {% include basekit.bodyScript %}

	<!-- jQuery -->
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	<script src="{{ asset('js/custom.js')}}"></script>
	<script src="{{ asset('js/theme.js')}}"></script>

	<script nonce="{{ numberUsedOnce }}">

        // Toggles class open to display/hide the whole navigation
        $( ".navigation-toggle" ).click(function() {
            $( ".bk-extendednavigation" ).toggleClass( "open" );
            $( "body, html" ).toggleClass( "noscroll" );
        });

        // Toggles class open to display/hide folders
        $( ".navigation-item.folder .item-name--parent" ).each(function() {
            $( this ).click(function() {
                    $( this ).parent( ".navigation-item.folder" ).toggleClass( "open-folder" );
            });
        });
    </script>

	{% block scripts %}
	{% endblock %}
</body>
</html>
